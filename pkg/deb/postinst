#!/bin/sh
set -e

# Post-installation script for space-captain-server

case "$1" in
    configure)
        # Find the versioned binary that was installed
        VERSIONED_BINARY=$(ls -1 /usr/bin/sc-server-* 2>/dev/null | head -n1)
        
        if [ -n "$VERSIONED_BINARY" ]; then
            # Create unversioned symlink
            ln -sf "$(basename "$VERSIONED_BINARY")" /usr/bin/space-captain-server
            echo "Created symlink: /usr/bin/space-captain-server -> $(basename "$VERSIONED_BINARY")"
        fi
        
        # Create data directory if it doesn't exist
        if [ ! -d /var/lib/space-captain ]; then
            mkdir -p /var/lib/space-captain
            chown nobody:nogroup /var/lib/space-captain
            chmod 755 /var/lib/space-captain
        fi
        
        # Enable and start the systemd service
        if [ -d /run/systemd/system ]; then
            systemctl daemon-reload
            systemctl enable space-captain-server.service
            echo "Space Captain Server service enabled. Start with: systemctl start space-captain-server"
        fi
        ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
        ;;
    
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0