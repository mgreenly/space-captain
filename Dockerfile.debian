FROM debian:stable-slim

# Install build dependencies for Space Captain
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    make \
    pkg-config \
    libmbedtls-dev \
    dpkg-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Default command - just keep container available
CMD ["/bin/bash"]